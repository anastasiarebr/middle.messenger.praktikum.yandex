{
  "name": "middle.messenger.praktikum.yandex",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "npm run build && node server.js",
    "dev": "vite --open",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts",
    "stylelint": "stylelint \"**/*.css\"",
    "test": "mocha --require mochaSetup.js",
    "prepare": "husky install",
    "pre-commit": "npm run lint && npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.3.16",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.28",
    "@types/sinon": "^17.0.3",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "chai": "^5.1.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "express": "^4.18.3",
    "husky": "^9.0.11",
    "mocha": "^10.4.0",
    "sass": "^1.72.0",
    "stylelint": "^16.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2",
    "vite": "^5.1.4"
  },
  "dependencies": {
    "handlebars": "^4.7.8",
    "jsdom": "^24.0.0",
    "sinon": "^17.0.2",
    "stylelint-scss": "^6.2.1",
